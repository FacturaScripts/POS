{% extends 'POS/Layout/Base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-9 col-sm-12">
            {{ include('POS/Block/ItemList.html.twig') }}
        </div>
        <div class="col-lg-3 col-sm-12">
            {{ include('POS/Block/SaleData.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block modals %}
    {{ include('POS/Modal/CheckoutModal.html.twig') }}
    {{ include('POS/Modal/CashupModal.html.twig') }}
    {{ include('POS/Modal/SearchCustomerModal.html.twig') }}
    {{ include('POS/Modal/SearchProductModal.html.twig') }}
{% endblock %}
{% block js %}
    <script id="cart-item-template" type="text/x-handlebars-template">
        {% verbatim %}
        <tr>
            <td>
                <div class="form-row">
                    <div class="col-2">
                        <input class="form-control cart-form-control" name="cart-item-id" value="{{id}}" type="text" readonly>
                    </div>
                    <div class="col-10">
                        <input class="form-control cart-form-control" name="cart-item-id" value="{{desc}}" type="text">
                    </div>
                </div>
            </td>
            <td><input class="form-control cart-form-control" type="number" value="1"></td>
            <td><input class="form-control cart-form-control" type="number" value="500"></td>
            <td><input class="form-control cart-form-control" type="number" value="500"></td>
        </tr>
        {% endverbatim %}
    </script>
    <script id="cart-item-templateb" type="text/x-handlebars-template">
        {% verbatim %}
            <div class="card">
                <div class="card-header" data-toggle="collapse" data-target="#collapse{{id}}" aria-expanded="true">
                    <div class="span-title">
                        {{id}} | {{desc}}
                    </div>
                    <div class="span"><i class="fas fa-chevron-circle-down"></i></div>
                </div>
                <div id="collapse{{id}}" class="collapse" data-parent="#cartItemsAccordion">
                    <div class="card-body">
                        <div class="row">
                        <div class="col">
                            <input class="form-control cart-form-control" type="number" value="1">
                        </div>
                        <div class="col">
                            <input class="form-control cart-form-control" type="number" value="1">
                        </div>
                        <div class="col">
                            <input class="form-control cart-form-control" type="number" value="1">
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endverbatim %}
    </script>
    <script type="text/javascript">
        posAutocompleteUrl = "EditFacturaCliente";
        posCashPaymentMethod = "{{ fsc.getCashPaymentMethod() }}";
        posFormName = "salesDocumentForm";
        posUrlAccess = "POS";
    </script>

    {#TODO: Change to dynamic for release #}
    {{ parent() }}
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/handlebars.min-v4.7.4.js') }}"></script>
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/pos.app.js') }}"></script>
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/pos.app.ui.js') }}"></script>
{% endblock %}
