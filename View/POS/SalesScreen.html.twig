{% extends 'POS/Layout/Base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {{ include('POS/Block/SaleData.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ include('POS/Block/ItemList.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block modals %}
    {{ include('POS/Modal/CheckoutModal.html.twig') }}
    {{ include('POS/Modal/CashupModal.html.twig') }}
    {{ include('POS/Modal/SearchCustomerModal.html.twig') }}
    {{ include('POS/Modal/SearchProductModal.html.twig') }}
{% endblock %}
{% block js %}
    <script id="cart-item-template" type="text/x-handlebars-template">
        {% verbatim %}
        {{#each this}}
        <tr>
            <td>
                <div class="form-row">
                    <div class="col-2">
                        <input class="form-control cart-form-control" name="cart-item-id" value="{{referencia}}" type="text" readonly>
                    </div>
                    <div class="col-10">
                        <input class="form-control cart-form-control" name="cart-item-id" value="{{descripcion}}" type="text">
                    </div>
                </div>
            </td>
            <td><input class="form-control cart-form-control" type="number" value="{{cantidad}}"></td>
            <td><input class="form-control cart-form-control" type="number" value="{{pvpunitario}}"></td>
            <td><input class="form-control cart-form-control" type="number" value="{{pvptotal}}"></td>
            <td><a href="#"><i class="fas fa-trash text-danger"></i></a></td>
        </tr>
        {{/each}}
        {% endverbatim %}
    </script>
    <script type="text/javascript">
        posCashPaymentMethod = "{{ fsc.getCashPaymentMethod() }}";
        posFormName = "salesDocumentForm";
        posUrlAccess = "POS";
    </script>

    {#TODO: Change to dynamic for release #}
    {{ parent() }}
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/handlebars.min-v4.7.4.js') }}"></script>
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/pos.cartitem.js') }}"></script>
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/pos.app.js') }}"></script>
    <script src="{{ asset('Plugins/EasyPOS/Assets/JS/pos.app.ui.js') }}"></script>
{% endblock %}
